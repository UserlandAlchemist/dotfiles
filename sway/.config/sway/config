exec --no-startup-id dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec --no-startup-id /usr/libexec/xdg-desktop-portal-wlr
exec --no-startup-id /usr/libexec/xdg-desktop-portal

# Notifcation Demon
exec mako

# PolicyKit authentication agent (for pkexec, Synaptic, etc.)
exec /usr/libexec/polkit-mate-authentication-agent-1

### Gaming: rules & QoL
# Make the 4K panel the target for games
set $game_output DP-1

# Variable refresh rate
output DP-1 adaptive_sync on
output HDMI-A-1 adaptive_sync on

# Keep games from blanking the screen
for_window [class="^steam_app_.*$"] floating enable, move to output $game_output, inhibit_idle focus
for_window [app_id="^(lutris|heroic)$"] floating enable, move to output $game_output, inhibit_idle focus
for_window [class="^UnityWndClass$|^UnrealWindow$|^SDL.*$"] floating enable, move to output $game_output, inhibit_idle focus
# Jackbox Party Packs (Vulkan builds via Proton/Xwayland)
for_window [shell="xwayland" class="^TJ(PP[0-9]+|SS)(_Vulkan)?$"] floating enable, inhibit_idle focus

# Steam itself
for_window [class="^[sS]team$"] floating enable, move to output $game_output
for_window [class="^[sS]team$" title="^(Friends|Chat|Settings|News|Screenshot Uploader|Controller Configuration)$"] floating enable, sticky enable, move to output $game_output

# Optional: a quick “game overlay off” key (hides Waybar while gaming)
bindsym $mod+Shift+b exec pkill -x waybar || waybar & disown

#### Cursors
  set $cursor_theme AmigaCursors
  set $cursor_size 32
  seat * xcursor_theme $cursor_theme $cursor_size
  exec_always --no-startup-id env XCURSOR_THEME=$cursor_theme XCURSOR_SIZE=$cursor_size true

include /etc/sway/config.d/*
