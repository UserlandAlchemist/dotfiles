[Unit]
Description=Borg off-site: Audacious home snapshot to BorgBase
Wants=network-online.target
After=network-online.target
RequiresMountsFor=/home /var/lib/borg-offsite /var/cache/borg-offsite

[Service]
Type=oneshot
User=root
Group=root
StandardOutput=journal
StandardError=journal

Nice=10
IOSchedulingClass=best-effort
IOSchedulingPriority=7

TimeoutStartSec=0

ExecStart=/usr/bin/systemd-inhibit --what=shutdown:sleep --mode=block /usr/local/lib/borg-offsite/run-audacious-home.sh
